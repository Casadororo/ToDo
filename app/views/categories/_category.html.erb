<div id="<%= dom_id category %>" class="card">
  <div class="card-header text-start">
  <div class="row">
    <div class="col h4 mb-0" style="transform: rotate(0);">
      <%= category.name %>
      <%= link_to edit_category_path(category), class: 'nav-link stretched-link', data:{turbo: true, turbo_frame: "modal"} do%> <%end%>
    </div>
    <div class="col-auto text-right">
      <%= link_to new_bubble_path(category_id: category.id), class: "nav-link", data:{turbo: true, turbo_frame: "modal"} do%>
        <i class="bi bi-plus h3"></i>
      <%end%>
    </div>
  </div>
  </div>
  <div class="card-body">
    <ul 
    class="list-group"
    data-controller="sortable" 
    data-sortable-resource-name-value="bubble"
    data-sortable-handle-value=".card">
    <% category.bubbles.order(:position).each do |bubble| %>
      <li class="list-group-item border-0 p-0" data-sortable-update-url="<%= update_position_path(bubble) %>">
        <%= render bubble %>
      </li>
    <% end %>
  </ul>
    </div>
</div>