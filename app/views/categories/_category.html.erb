<div id="<%= dom_id category %>" class="card">
  <div class="card-header text-start">
  <div class="row justify-content-between">
    <div class="col h5" style="transform: rotate(0);">
      <%= category.name %>
      <%= link_to edit_category_path(category), class: 'nav-link stretched-link', data:{turbo: true, turbo_frame: "modal"} do%> <%end%>
    </div>
    <div class="col-2">
      <%= link_to new_bubble_path(category_id: category.id), class: 'nav-link', data:{turbo: true, turbo_frame: "modal"} do%>
        <i class="bi bi-plus h3"></i>
      <%end%>
    </div>
  </div>
  </div>
  <div class="card-body">
    <div class="row row-cols-1 row-cols-md-1">
      <% category.bubbles.each do |bubble| %>
      <div class="col">
        <%= render bubble %>
      </div>
      <% end %>
    </div>
  </div>
</div>