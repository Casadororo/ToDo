<p style="color: green"><%= notice %></p>

<h1>Categories
<%= link_to new_category_path, class:"btn btn-default" do%>
<h1><i class="bi bi-plus"></i></h1>
<% end %>
</h1> 

<div class="container text-center">
  <div class="row align-items-start">
    <% @categories.each do |category| %>
    <div class="col">
    <%= link_to "Show this category", category %> <br/>
      <%= render category %>
    </div>
    <% end %>
  </div>
</div>
