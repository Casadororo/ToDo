<div id="<%= dom_id bubble %>" class="card border-light mb-3" >
  <div class="card-header"><%= bubble.name %></div>
  <div class="card-body">
    <h5 class="card-title">priority: <%= bubble.priority %> category_id: <%= bubble.category_id %> </h5>
    <p class="card-text"><%= bubble.description %></p>
    <%= link_to bubble, {:remote => true, 'data-bs-toggle' =>  "modal", 'data-bs-target' => '#exampleModal', class: 'nav-link stretched-link'} do%> <%end%>
  </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render "bubbles/form", bubble: bubble %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>