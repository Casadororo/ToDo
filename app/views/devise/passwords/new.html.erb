<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row d-flex justify-content-center align-items-center pt-5">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card" style="border-radius: 1rem;">
          <div class="card-body border-secondary p-5 text-center">
            <div class="mb-md-5 mt-md-4 pb-1">

<h2 class="fw-bold mb-2 text-uppercase">password</h2>
<p class="mb-5">Forgot your password?<br>Inform your email for recovery</p>

<div class="form-floating mb-3">
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "floatingInput", placeholder: "name@example.com" %>
  <label for="floatingInput">Email address</label>
</div>

  <div class="actions">
    <%= f.submit "Send", class: "btn btn-outline-secondary btn-lg px-5" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
</div>